DOCUMENTATION = '''
---
module: Riak
short_description: Does Riaky things
description:
     - Gathers riak facts
'''


import os.path

def _run(cmd):
    # returns (rc, stdout, stderr) from shell command
    process = subprocess.Popen(cmd, stdout=subprocess.PIPE,
                               stderr=subprocess.PIPE, shell=True)
    stdout, stderr = process.communicate()
    return (process.returncode, stdout, stderr)


def main():


    ansible_facts = {}
    arg_spec = dict(
        ip=dict(required=False),
        host_list=dict(required=False),
        transfer_wait=dict(required=False, default=False)
    )

    module = AnsibleModule(argument_spec=arg_spec)


    ip = module.params['ip']
    host_list=module.params['host_list'].split(',')
    transfer_wait=module.params['transfer_wait']
    rc = 0
    err = ''
    out = ''


    rc, out, err = _run('riak-admin member-status|grep ^valid|wc -l')
    if rc == 0:
        ansible_facts['riak_valid_nodes'] = out.replace('\n','')

    rc, out, err = _run("riak-admin member-status|grep %s|awk '{print $1}'" % ip)
    if rc == 0:
        ansible_facts['riak_node_status'] = out.replace('\n','')


    ansible_facts['riak_node_count'] = len(host_list)
    changed = True

    result = {"changed": changed,
              "ansible_facts": ansible_facts }



    if transfer_wait:
        rc = 0
        err = ''
        out = ''
        while out.find('No transfers active') == -1:
            rc, out, err = _run('riak-admin transfers')
            time.sleep(10)

    module.exit_json(**result)


# this is magic, see lib/ansible/module_common.py
#<<INCLUDE_ANSIBLE_MODULE_COMMON>>

main()
